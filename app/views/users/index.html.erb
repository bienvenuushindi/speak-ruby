<p style="color: green"><%= notice %></p>

<h1>USERS</h1>

<ul id="users">
  <% @users.each do |user| %>
    <li>
      <div class="card">
        <%= image_tag ("#{user.photo}") %>
        <h2><%= user.name %></h2>
        <p>Number of posts: <%= user.posts_counter %></p>
      </div>
    </li>
  <% end %>
</ul>

