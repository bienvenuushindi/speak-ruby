<%= form_with model: post, url: user_posts_path(@current_user.id), method: :post, local: true, scope: :post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :text %>
    <%= f.text_field :text %>
  </div>
  <div>
    <%= f.submit "Add Post" %>
  </div>
<% end %>
