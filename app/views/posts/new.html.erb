<div class="list-box">
  <h1 class="leading header">ADD POST</h1>
  <%= form_with model: post, url: user_posts_path(:current_user.id), method: :post, local: true, scope: :post do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'input-control' %>
    </div>
    <div class="form-group">
      <%= f.label :text %>
      <%= f.text_area :text, class: 'input-area' %>
    </div>
    <div class="text-end mt-2">
      <%= f.submit "Add Post", class: 'btn btn-default submit' %>
    </div>
  <% end %>
</div>