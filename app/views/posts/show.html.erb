<div>
  <div class="card">
    <h2><%= @post.title %></h2>
    <p><%= @post.text %></p>
    <div>
      <div>Comments <span><%= @post.comments_counter %></span></div>
      <div>Likes <span><%= @post.likes_counter %></span></div>
    </div>
  </div>
    <ul>
      <!--        recent_comments-->
      <% @post.comments.each do |comment| %>
        <li>
          <h6><%= comment.author.name %></h6>
          <p>
            <%= comment.text %>
          </p>
        </li>
      <% end %>
    </ul>
</div>