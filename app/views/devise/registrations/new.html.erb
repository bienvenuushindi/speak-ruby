<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="field form-group">
    <%= f.label :name %><br />
    <%= f.text_field :name, class: 'input-control', placeholder: "Your Name" %>
  </div>

  <div class="field form-group">
    <%= f.label :bio %><br />
    <%= f.text_area :bio, class: 'input-area', placeholder: "Your Bio"  %>
  </div>

  <div class="field form-group">
    <%= f.label :photo %><br />
    <%= f.url_field :photo, class: 'input-control', placeholder: "https://domain.com/image.jpg"  %>
  </div>

  <div class="field form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'input-control', placeholder: "Email Address" %>
  </div>

  <div class="field form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'input-control', placeholder: "Strong Password"  %>
  </div>

  <div class="field form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'input-control', placeholder: "Confirm Strong Password" %>
  </div>

  <div class="actions my-2">
    <%= f.submit "Sign up", class: 'btn btn-default submit' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
