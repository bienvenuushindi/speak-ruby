<div class="card d-flex flex-column justify-space-between w-100">
  <h2 class="header text-start"><%= post.title %> #<%= (index + 1) %></h2>
  <p><%= post.text %></p>
  <%= render 'partials/comments_likes', post: post %>
  <div class="text-end mt-2">
    <%= link_to new_comment_path(post.id) do %>
      <button class="btn btn-default btn-sm mx-auto">Add Comment</button>
    <% end %>
    <%= link_to single_post_path(post.id) do %>
      <button class="btn btn-default btn-sm mx-auto">View Post</button>
    <% end %>
    <% if can? :destroy, User %>
      <%= button_to "Delete", single_post_path(post.id), remote: true, data: { confirm: 'Are you sure?' }, method: :delete %>
    <% end %>
  </div>
</div>